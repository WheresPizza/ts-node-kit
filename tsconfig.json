{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["ES2022", "ES6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,

  },
  "include": [
    "src/**/*",
    "eslint.config.js",
  ],
  "exclude": ["node_modules", "dist"]
}
